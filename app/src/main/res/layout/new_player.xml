<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Création du nouveau Joueur :"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/newplayertext"/>

    <EditText
        android:layout_width = "200dp"
        android:layout_height = "45dp"
        android:hint="Nom du Joueur"
        android:inputType = "text"
        app:layout_constraintTop_toBottomOf="@id/newplayertext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/editplayername"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="endPlayer"
        android:text="@string/Validate"
        app:layout_constraintEnd_toEndOf="@id/editplayername"
        app:layout_constraintTop_toBottomOf="@id/editplayername"
        android:id="@+id/buttonnewplayer"/>
    <!-- TODO : onClick ajouter methods liées à la BDD -->
</android.support.constraint.ConstraintLayout>